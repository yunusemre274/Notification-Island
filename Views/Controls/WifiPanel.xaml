<UserControl x:Class="NI.Views.Controls.WifiPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="NetworkItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="Border">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <!-- Acrylic-style panel -->
    <Border Background="#E8202020" CornerRadius="14" 
            Width="320" MinHeight="200"
            RenderTransformOrigin="0.5,0">
        <Border.RenderTransform>
            <TranslateTransform x:Name="PanelTranslate" Y="0"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.3" Color="Black"/>
        </Border.Effect>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¶" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="WiFi" FontSize="16" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- WiFi Toggle -->
                <Border x:Name="WifiToggle" Grid.Column="1" Style="{StaticResource ToggleButtonStyle}"
                        Background="#0078D4" MouseLeftButtonDown="OnWifiToggleClick">
                    <Ellipse x:Name="ToggleKnob" Width="18" Height="18" Fill="White"
                             HorizontalAlignment="Right" Margin="3"/>
                </Border>
            </Grid>

            <!-- Connected Network -->
            <Border Grid.Row="1" Background="#30FFFFFF" CornerRadius="10" Padding="12" Margin="0,0,0,8"
                    Visibility="{Binding ConnectedVisibility}">
                <StackPanel>
                    <TextBlock Text="BaÄŸlÄ±" Foreground="#AAA" FontSize="11"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock x:Name="ConnectedIcon" Text="ðŸ“¶" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock x:Name="ConnectedSSID" Text="Home_WiFi_5G" Foreground="White" FontSize="13" FontWeight="Medium"/>
                        <TextBlock Text="ðŸ”’" FontSize="11" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Network List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="150">
                <StackPanel x:Name="NetworkList">
                    <!-- Networks populated in code-behind -->
                </StackPanel>
            </ScrollViewer>

            <!-- Refresh Button -->
            <Border Grid.Row="3" Background="#30FFFFFF" CornerRadius="8" Padding="10,8" Margin="0,8,0,0"
                    Cursor="Hand" MouseLeftButtonDown="OnRefreshClick"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="RefreshIcon" Text="ðŸ”„" FontSize="12" Margin="0,0,6,0"/>
                    <TextBlock Text="Yenile" Foreground="White" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
