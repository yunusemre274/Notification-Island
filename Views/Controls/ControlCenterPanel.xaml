    </UserControl.Resources>

    <!-- Main Panel Container -->
    <Border x:Name="MainPanel" CornerRadius="32" Width="360" Height="520"
            RenderTransformOrigin="0.5,0">
        <Border.Background>
            <SolidColorBrush Color="#1E1E1E"/>
        </Border.Background>
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="PanelScale" ScaleX="1" ScaleY="1"/>
                <TranslateTransform x:Name="PanelTranslate" Y="-8"/>
            </TransformGroup>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="45" ShadowDepth="18" Opacity="0.45" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="18"/> <!-- Left volume bar -->
                <ColumnDefinition Width="*"/>  <!-- Main content -->
            </Grid.ColumnDefinitions>

            <!-- LEFT VERTICAL VOLUME BAR -->
            <Border Grid.Column="0" CornerRadius="9" Margin="0,20,0,20" Background="#40808080">
                <Grid>
                    <!-- Volume fill (grows from bottom) -->
                    <Border x:Name="VolumeFill" CornerRadius="9" VerticalAlignment="Bottom"
                            Background="#00E5FF" Height="200"/>

                    <!-- Volume icon -->
                    <Image Source="{StaticResource VolumeIcon}" Width="12" Height="12"
                           VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                </Grid>
            </Border>

            <!-- MAIN CONTENT AREA -->
            <Grid Grid.Column="1" Margin="16,18,16,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Top toggles -->
                    <RowDefinition Height="Auto"/> <!-- Middle icon buttons -->
                    <RowDefinition Height="Auto"/> <!-- System metrics -->
                    <RowDefinition Height="*"/>    <!-- Spacer -->
                    <RowDefinition Height="Auto"/> <!-- Audio slider -->
                    <RowDefinition Height="Auto"/> <!-- Brightness slider -->
                </Grid.RowDefinitions>

                <!-- TOP TOGGLES: WiFi & Bluetooth Pills -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- WiFi Pill -->
                    <Border x:Name="WifiTile" Width="150" Height="72" CornerRadius="36"
                            Background="White" Cursor="Hand" Margin="0,0,8,0"
                            MouseLeftButtonDown="OnWifiToggle"
                            MouseEnter="OnTileMouseEnter" MouseLeave="OnTileMouseLeave">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image x:Name="WifiIcon" Source="{StaticResource WifiIcon}" Width="28" Height="28"
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="WifiLabel" Text="Wi-Fi" Foreground="Black"
                                       FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Bluetooth Pill -->
                    <Border x:Name="BluetoothTile" Width="150" Height="72" CornerRadius="36"
                            Background="White" Cursor="Hand" Margin="8,0,0,0"
                            MouseLeftButtonDown="OnBluetoothToggle"
                            MouseEnter="OnTileMouseEnter" MouseLeave="OnTileMouseLeave">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Image x:Name="BluetoothIcon" Source="{StaticResource BluetoothIcon}" Width="28" Height="28"
                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="BluetoothLabel" Text="Bluetooth" Foreground="Black"
                                       FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- MIDDLE ICON BUTTONS: Gold Circles -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- Airplane Button -->
                    <Border x:Name="AirplaneTile" Width="48" Height="48" CornerRadius="24"
                            Background="#D4AF37" Cursor="Hand" Margin="0,0,16,0"
                            MouseLeftButtonDown="OnAirplaneToggle"
                            MouseEnter="OnTileMouseEnter" MouseLeave="OnTileMouseLeave">
                        <Viewbox Width="22" Height="22">
