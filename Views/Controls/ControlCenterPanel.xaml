<UserControl x:Class="NI.Views.Controls.ControlCenterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Toggle Button Base Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="Border">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Panel with Acrylic Effect -->
    <Border Background="#E8181818" CornerRadius="16" 
            Width="370" Height="420"
            RenderTransformOrigin="0.5,0">
        <Border.RenderTransform>
            <TranslateTransform x:Name="PanelTranslate" Y="0"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="5" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Row: Quick Toggles (2x3 Grid) -->
            <UniformGrid Grid.Row="0" Rows="2" Columns="3" Margin="0,0,0,12">
                
                <!-- WiFi Toggle -->
                <Border x:Name="WifiToggle" Style="{StaticResource ToggleButtonStyle}"
                        Background="#0078D4" MouseLeftButtonDown="OnWifiToggle">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¶" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="WifiLabel" Text="WiFi" Foreground="White" FontSize="11" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Bluetooth Toggle -->
                <Border x:Name="BluetoothToggle" Style="{StaticResource ToggleButtonStyle}"
                        Background="#555" MouseLeftButtonDown="OnBluetoothToggle">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”µ" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="BluetoothLabel" Text="Bluetooth" Foreground="White" FontSize="11" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Airplane Mode -->
                <Border x:Name="AirplaneToggle" Style="{StaticResource ToggleButtonStyle}"
                        Background="#555" MouseLeftButtonDown="OnAirplaneToggle">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="âœˆï¸" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Airplane" Foreground="White" FontSize="11" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Hotspot -->
                <Border x:Name="HotspotToggle" Style="{StaticResource ToggleButtonStyle}"
                        Background="#555" MouseLeftButtonDown="OnHotspotToggle">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¡" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Hotspot" Foreground="White" FontSize="11" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Night Light -->
                <Border x:Name="NightLightToggle" Style="{StaticResource ToggleButtonStyle}"
                        Background="#555" MouseLeftButtonDown="OnNightLightToggle">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŒ™" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Night Light" Foreground="White" FontSize="11" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Accessibility -->
                <Border x:Name="AccessibilityToggle" Style="{StaticResource ToggleButtonStyle}"
                        Background="#555" MouseLeftButtonDown="OnAccessibilityToggle">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="â™¿" FontSize="22" HorizontalAlignment="Center"/>
                        <TextBlock Text="Accessibility" Foreground="White" FontSize="11" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Brightness Slider -->
            <Grid Grid.Row="1" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="â˜€ï¸" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <Slider x:Name="BrightnessSlider" Grid.Column="1" Style="{StaticResource ModernSlider}"
                        Value="75" ValueChanged="OnBrightnessChanged"/>
                <TextBlock x:Name="BrightnessText" Grid.Column="2" Text="75%" Foreground="White" 
                           FontSize="12" VerticalAlignment="Center" Margin="12,0,0,0" Width="35"/>
            </Grid>

            <!-- Volume Slider -->
            <Grid Grid.Row="2" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="VolumeIcon" Text="ðŸ”Š" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <Slider x:Name="VolumeSlider" Grid.Column="1" Style="{StaticResource ModernSlider}"
                        Value="75" ValueChanged="OnVolumeChanged"/>
                <TextBlock x:Name="VolumeText" Grid.Column="2" Text="75%" Foreground="White" 
                           FontSize="12" VerticalAlignment="Center" Margin="12,0,8,0" Width="35"/>
                
                <!-- Mute Button -->
                <Border x:Name="MuteButton" Grid.Column="3" Background="#30FFFFFF" 
                        CornerRadius="6" Padding="8,4" Cursor="Hand"
                        MouseLeftButtonDown="OnMuteClick">
                    <TextBlock x:Name="MuteIcon" Text="ðŸ”‡" FontSize="12"/>
                </Border>
            </Grid>

            <!-- Output Device Selector -->
            <Border Grid.Row="3" Background="#30FFFFFF" CornerRadius="10" Padding="12,10" Margin="0,12,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ðŸŽ§" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Output Device" Foreground="#AAA" FontSize="10"/>
                        <TextBlock x:Name="OutputDeviceText" Text="Speakers" Foreground="White" FontSize="12"/>
                    </StackPanel>
                    <Border Grid.Column="2" Background="#40FFFFFF" CornerRadius="6" Padding="8,4" 
                            Cursor="Hand" MouseLeftButtonDown="OnOutputDeviceClick">
                        <TextBlock Text="â–¼" Foreground="White" FontSize="10"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Output Device Dropdown -->
            <Border x:Name="DeviceDropdown" Grid.Row="4" Background="#30000000" CornerRadius="8" 
                    Margin="0,8,0,0" Visibility="Collapsed">
                <StackPanel x:Name="DeviceList" Margin="8">
                    <!-- Devices populated in code-behind -->
                </StackPanel>
            </Border>

            <!-- Bottom: Battery + Settings -->
            <Grid Grid.Row="5" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Battery Indicator -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="BatteryIcon" Text="ðŸ”‹" FontSize="16" Margin="0,0,8,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="BatteryText" Text="85%" Foreground="White" FontSize="13"/>
                        <TextBlock x:Name="BatteryStatus" Text="Plugged in" Foreground="#AAA" FontSize="10"/>
                    </StackPanel>
                </StackPanel>

                <!-- Settings Button -->
                <Border Grid.Column="1" Background="#30FFFFFF" CornerRadius="8" Padding="12,8" 
                        Cursor="Hand" MouseLeftButtonDown="OnSettingsClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™ï¸" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Settings" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
