                                      Fill="#1E1E1E"/>
                            </Canvas>
                        </Viewbox>
                    </Border>

                    <!-- Settings Button -->
                    <Border x:Name="SettingsTile" Width="48" Height="48" CornerRadius="24"
                            Background="#D4AF37" Cursor="Hand"
                            MouseLeftButtonDown="OnSettingsClick"
                            MouseEnter="OnTileMouseEnter" MouseLeave="OnTileMouseLeave">
                        <Viewbox Width="22" Height="22">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                      Fill="#1E1E1E"/>
                            </Canvas>
                        </Viewbox>
                    </Border>
                </StackPanel>

                <!-- SYSTEM METRICS SECTION -->
                <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <!-- CPU CIRCULAR BAR -->
                    <Grid Width="96" Height="96" Margin="0,0,0,16" HorizontalAlignment="Center">
                        <!-- Background ring -->
                        <Ellipse Stroke="#9E9E9E" StrokeThickness="12" Fill="Transparent"/>

                        <!-- CPU usage arc (red) -->
                        <Canvas x:Name="CpuCanvas" Width="96" Height="96">
                            <Path x:Name="CpuArc" Stroke="#FF2E2E" StrokeThickness="12"
                                  Fill="Transparent" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                        </Canvas>

                        <!-- Inner white circle -->
                        <Ellipse Width="72" Height="72" Fill="White"/>

                        <!-- CPU text -->
                        <TextBlock Text="CPU" FontSize="16" FontWeight="SemiBold"
                                   Foreground="#333333" HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- RAM HORIZONTAL BAR -->
                    <Border Width="240" Height="28" CornerRadius="14"
                            Background="#E0E0E0" Margin="0,0,0,12">
                        <Grid>
                            <!-- RAM fill -->
                            <Border x:Name="RamFill" CornerRadius="14"
                                    Background="#FF2E2E" HorizontalAlignment="Left" Width="120"/>

                            <!-- RAM text -->
                            <TextBlock x:Name="RamText" Text="RAM 50%"
                                       FontSize="12" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- SSD DUAL COLOR BAR -->
                    <Border Width="260" Height="32" CornerRadius="16" Margin="0,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="SsdUsedColumn" Width="130*"/>
                                <ColumnDefinition x:Name="SsdFreeColumn" Width="130*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Used space (red) -->
                            <Border Grid.Column="0" Background="#FF2E2E"
                                    CornerRadius="16,0,0,16">
                                <TextBlock x:Name="SsdUsedText" Text="128 GB"
                                           FontSize="11" FontWeight="SemiBold"
                                           Foreground="White" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Free space (green) -->
                            <Border Grid.Column="1" Background="#7ED957"
                                    CornerRadius="0,16,16,0">
                                <TextBlock x:Name="SsdFreeText" Text="128 GB"
                                           FontSize="11" FontWeight="SemiBold"
                                           Foreground="White" HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- AUDIO SLIDER -->
                <Border Grid.Row="4" Background="#2C2C2E" CornerRadius="18"
                        Height="36" Margin="0,0,0,12" HorizontalAlignment="Center" Width="280">
                    <Grid Margin="12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image x:Name="VolumeIconImage" Source="{StaticResource VolumeIcon}"
                               Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <Slider x:Name="VolumeSlider" Grid.Column="1"
                                Value="75" Minimum="0" Maximum="100"
                                VerticalAlignment="Center" Height="6"
                                ValueChanged="OnVolumeChanged"
                                IsMoveToPointEnabled="True">
                            <Slider.Template>
                                <ControlTemplate TargetType="Slider">
                                    <Grid>
                                        <Border Background="#3A3A3C"
                                                CornerRadius="3" Height="6"/>
                                        <Border x:Name="PART_SelectionRange"
                                                Background="#FFFFFF"
                                                CornerRadius="3" Height="6" HorizontalAlignment="Left"/>
                                        <Track x:Name="PART_Track">
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Ellipse Width="14" Height="14" Fill="White">
                                                                <Ellipse.Effect>
                                                                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                                                                </Ellipse.Effect>
                                                            </Ellipse>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Slider.Template>
                        </Slider>

                        <TextBlock x:Name="VolumeText" Grid.Column="2" Text="75%"
                                   Foreground="White" FontSize="12" FontWeight="Medium"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </Border>

                <!-- WHITE BRIGHTNESS SLIDER -->
                <Border Grid.Row="5" Background="#FFFFFF" CornerRadius="18"
                        Height="36" Margin="0,0,0,16" HorizontalAlignment="Center" Width="260">
                    <Grid Margin="12,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Width="18" Height="18" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,18C11.11,18 10.26,17.8 9.5,17.45C11.56,16.5 13,14.42 13,12C13,9.58 11.56,7.5 9.5,6.55C10.26,6.2 11.11,6 12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18M20,8.69V4H15.31L12,0.69L8.69,4H4V8.69L0.69,12L4,15.31V20H8.69L12,23.31L15.31,20H20V15.31L23.31,12L20,8.69Z"
                                      Fill="#555555"/>
                            </Canvas>
                        </Viewbox>

                        <Slider x:Name="BrightnessSlider" Grid.Column="1"
                                Value="75" Minimum="0" Maximum="100"
                                VerticalAlignment="Center" Height="6"
                                ValueChanged="OnBrightnessChanged"
                                IsMoveToPointEnabled="True">
                            <Slider.Template>
                                <ControlTemplate TargetType="Slider">
                                    <Grid>
                                        <Border Background="#E0E0E0"
                                                CornerRadius="3" Height="6"/>
                                        <Border x:Name="PART_SelectionRange"
                                                Background="#555555"
                                                CornerRadius="3" Height="6" HorizontalAlignment="Left"/>
                                        <Track x:Name="PART_Track">
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Ellipse Width="24" Height="24" Fill="#FFFFFF">
                                                                <Ellipse.Effect>
                                                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2" Color="#000000"/>
                                                                </Ellipse.Effect>
                                                            </Ellipse>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Slider.Template>
                        </Slider>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
