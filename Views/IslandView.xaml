<UserControl x:Class="NI.Views.IslandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:NI.ViewModels"
             MouseEnter="OnMouseEnter"
             MouseLeave="OnMouseLeave"
             MouseLeftButtonDown="OnLeftClick"
             MouseRightButtonDown="OnRightClick">

    <UserControl.DataContext>
        <vm:IslandVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Frozen brush for performance -->
        <SolidColorBrush x:Key="IslandBackground" Color="#000000" Opacity="0.75" />
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <!-- Main Island Pill -->
        <Border x:Name="IslandBorder"
                Width="350" Height="36"
                CornerRadius="18"
                Background="{StaticResource IslandBackground}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="IslandScale" ScaleX="1" ScaleY="1"/>
                </TransformGroup>
            </Border.RenderTransform>

            <Grid Margin="16,0">
                <!-- Compact Content -->
                <Grid x:Name="CompactContent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Clock -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="ClockText" 
                                   Text="{Binding ClockText}" 
                                   FontFamily="Segoe UI Semibold" 
                                   FontSize="14" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                        <Ellipse Width="6" Height="6" Fill="#2EE36E" 
                                 VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Center: Status text or app icon -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image x:Name="AppIconSmall" Width="18" Height="18"
                               Source="{Binding AppIcon}" Margin="0,0,6,0"
                               Visibility="{Binding HasNotification, Converter={StaticResource BoolToVis}}"/>
                        <TextBlock Text="{Binding CompactText}" 
                                   Foreground="#AAFFFFFF" FontSize="12" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Right: Status indicators -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="â—" Foreground="#2EE36E" FontSize="8" Margin="0,0,4,0"/>
                    </StackPanel>
                </Grid>

                <!-- Expanded Content (hidden by default) -->
                <Grid x:Name="ExpandedContent" Opacity="0" IsHitTestVisible="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Clock + Icon -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ClockText}" 
                                   FontFamily="Segoe UI Semibold" FontSize="15" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        <Ellipse Width="7" Height="7" Fill="#2EE36E" 
                                 VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Center: Notification content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" 
                                HorizontalAlignment="Center" Margin="24,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Width="22" Height="22" Source="{Binding AppIcon}" 
                                   Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding AppName}" FontWeight="SemiBold" 
                                       Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding NotificationText}" 
                                   Foreground="#CCFFFFFF" FontSize="12" 
                                   HorizontalAlignment="Center" Margin="0,2,0,0"
                                   TextTrimming="CharacterEllipsis" MaxWidth="400"/>
                    </StackPanel>

                    <!-- Right: Status icons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”Š" FontSize="12" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock Text="ðŸ“¶" FontSize="12" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Settings Popup -->
        <Popup x:Name="SettingsPopup" 
               Placement="Bottom" 
               PlacementTarget="{Binding ElementName=IslandBorder}"
               StaysOpen="False" 
               AllowsTransparency="True" 
               PopupAnimation="Fade">
            <Border Background="#E5000000" CornerRadius="12" Padding="16" Margin="8">
                <StackPanel Width="180">
                    <TextBlock Text="Settings" Foreground="White" FontWeight="Bold" 
                               FontSize="14" Margin="0,0,0,12"/>
                    
                    <CheckBox Content="Start with Windows" Foreground="White" FontSize="12"
                              IsChecked="{Binding AutostartEnabled}" Margin="0,4"/>
                    <CheckBox Content="Sound Effects" Foreground="White" FontSize="12"
                              IsChecked="{Binding SoundEnabled}" Margin="0,4"/>
                    
                    <Separator Margin="0,12,0,12" Background="#333"/>
                    
                    <Button Content="Exit App" Click="OnExitClick" 
                            Background="#CC3333" Foreground="White" 
                            BorderThickness="0" Padding="10,6" Cursor="Hand"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
