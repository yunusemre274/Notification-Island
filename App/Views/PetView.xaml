<UserControl x:Class="NI.App.Views.PetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:NI.App.ViewModels"
             Width="100" Height="100">

    <UserControl.DataContext>
        <vm:PetViewModel />
    </UserControl.DataContext>

    <Grid>
        <Image x:Name="PetImage" Width="80" Height="80"
               Source="pack://siteoforigin:,,,/Assets/PetSprites/idle_1.png"
               RenderTransformOrigin="0.5,1"
               MouseLeftButtonDown="OnClick"
               MouseRightButtonDown="OnRightClick">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="PetScale" ScaleX="1" ScaleY="1"/>
                    <TranslateTransform x:Name="PetTranslate" Y="0"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</UserControl>
